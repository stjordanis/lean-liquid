@[simp] lemma htpy_idx_rel‚ÇÅ_ff_nat (i j : ‚Ñï) :
  htpy_idx_rel‚ÇÅ ff i j ‚Üî i = j + 1 ‚à® (i = 0 ‚àß j = 0) :=
