  (hf : ‚àÄ i j, C‚ÇÅ.d i j ‚â´ (f j).hom = (f i).hom ‚â´ C‚ÇÇ.d i j) :
  C‚ÇÅ ‚âÖ C‚ÇÇ :=
{ hom :=
  { f := Œª i, (f i).hom,
